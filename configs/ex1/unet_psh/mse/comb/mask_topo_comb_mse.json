{
    "name": "UNet",
    "n_gpu": 2,
    "arch": {
        "type": "UNet",
        "args": {
            "in_channels": 3,
            "out_channels": 3,
            "dim": 2,
            "n_blocks": 4,
            "up_mode": "pixel_shuffle",
            "activation": "relu",
            "start_filts": 32,
            "merge_mode": "concat",
            "normalization": "group32",
            "final_activation": "lin",
            "enc_res_blocks": 1,
            "dec_res_blocks": 0
        },
        "output_noise": false
    },
    "dataloader": {
        "type": "CFADataLoader",
        "args": {
            "data_dir": "../test-Dataset/3_aligned",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.2,
            "n_patches_per_im": 5,
            "size": [
                256,
                256
            ],
            "isos": [
                20000,
                650000
            ],
            "cams": [
                "Sony"
            ],
            "crop_type": "random",
            "scaling": true,
            "debayer": true,
            "sc_type": "neg1to1"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": {
        "type": "combo_masked_loss",
        "args": {
            "loss_type": "wass",
            "wave": "haar",
            "level": 1,
            "reduce_mask": true,
            "maxdim": 0,
            "patch": false,
            "base_loss": "mse",
            "out_log": false
        }
    },
    "metrics": [
        "psnr",
        "ssim",
        "lpips"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 30,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 400,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "max psnr",
        "early_stop": 400,
        "tensorboard": true,
        "img_log_step": 1000,
        "seed": 123,
        "autocast": true
    }
}